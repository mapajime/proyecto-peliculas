@using Movies.Models;
@model MovieModel;
@{
    ViewData["Title"] = "Create Movie";
}

<h3>Create Movie</h3>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="col-sm-10 font-weight-bold form-group">
            <div>
                @Html.LabelFor(model=>model.Name)
                @Html.EditorFor(model=>model.Name)
            </div>
            <div>
                @Html.LabelFor(model=>model.Duration)
                @Html.EditorFor(model=>model.Duration)
            </div>
            <div>
                @Html.LabelFor(model=>model.Argument)
                @Html.EditorFor(model=>model.Argument)
            </div>
            <div>
                @Html.LabelFor(model=>model.Slogan)
                @Html.EditorFor(model=>model.Slogan)
            </div>
            <div>
                @Html.LabelFor(model=>model.Director)
                @Html.EditorFor(model=>model.Director)
            </div>
            <div>
                @Html.LabelFor(model=>model.ReleaseDate)
                @Html.EditorFor(model=>model.ReleaseDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </div>
    </div>
}

