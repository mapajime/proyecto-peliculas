@using Movies.Models;
@model ActorModel;
@{
    ViewData["Title"] = "Edit Actor";
}
<h3>Edit Actor</h3>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="col-sm-10 font-weight-bold form-group">
            @Html.LabelFor(model=>model.FirstName)
            @Html.EditorFor(model=>model.FirstName)
        </div>
         <div>
                @Html.LabelFor(model=>model.LastName)
                @Html.EditorFor(model=>model.LastName)
            </div>
            <div>
                @Html.LabelFor(model=>model.DateOfBirth)
                @Html.EditorFor(model=>model.DateOfBirth)
            </div>
            <div>
                @Html.LabelFor(model=>model.Weight)
                @Html.EditorFor(model=>model.Weight)
            </div>
            <div>
                @Html.LabelFor(model=>model.Height)
                @Html.EditorFor(model=>model.Height)
            </div>
            <div>
                @Html.LabelFor(model=>model.NetWorth)
                @Html.EditorFor(model=>model.NetWorth)
            </div>
            <div>
                @Html.LabelFor(model=>model.NumberOfChildren)
                @Html.EditorFor(model=>model.NumberOfChildren)
            </div>
        <div>
            @Html.HiddenFor(model=>model.Id)
            @Html.HiddenFor(model=>model.CreatedAt)
            @Html.HiddenFor(model=>model.ModifiedAt)
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Edit" class="btn btn-primary">
            </div>
        </div>
    </div>
}
