@using Movies.Models;
@model ActorViewModel;
@{
    ViewData["Title"] = "Create Actor";
}

<h3>Create Actor</h3>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="col-sm-10 font-weight-bold form-group">
            <div>
                @Html.LabelFor(model=>model.FirstName)
                @Html.EditorFor(model=>model.FirstName)
            </div>
            <div>
                @Html.LabelFor(model=>model.LastName)
                @Html.EditorFor(model=>model.LastName)
            </div>
            <div>
                @Html.LabelFor(model=>model.DateOfBirth)
                @Html.EditorFor(model=>model.DateOfBirth)
            </div>
            <div>
                @Html.LabelFor(model=>model.Weight)
                @Html.EditorFor(model=>model.Weight)
            </div>
            <div>
                @Html.LabelFor(model=>model.Height)
                @Html.EditorFor(model=>model.Height)
            </div>
            <div>
                @Html.LabelFor(model => model.GenderId)
                @Html.DropDownListFor(model=>model.GenderId, Model.Genders, "-- Seleccione Genero --", null)
            </div>
            <div>
                @Html.LabelFor(model => model.NationalityId)
                @Html.DropDownListFor(model=>model.NationalityId, Model.Nacionalities, "-- Seleccione Genero --", null)
            </div>
            <div>
                @Html.LabelFor(model=>model.NetWorth)
                @Html.EditorFor(model=>model.NetWorth)
            </div>
            <div>
                @Html.LabelFor(model=>model.NumberOfChildren)
                @Html.EditorFor(model=>model.NumberOfChildren)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </div>
    </div>
}
