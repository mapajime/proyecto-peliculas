@using Movies.Models
@model IEnumerable<CountryModel>
@{
    ViewData["Titel"] = "Countries";
}
<h3>List of Countries</h3>

@Html.ActionLink("Create", "Create")

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Modified At</th>
            <th>Options</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Name</td>
                <td>@country.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@country.ModifiedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @Html.ActionLink("Edit","Edit", new {id=@country.Id}) &nbsp
                    @Html.ActionLink("Delete","Delete", new {id=@country.Id})
                </td>
            </tr>
        }
    </tbody>
</table>