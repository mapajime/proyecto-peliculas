@using Movies.Models;
@model IEnumerable<MovieGenderModel>

@{
    ViewData["Title"] = "Movie Gender";
}
<h3>List of Movie Genders</h3>
@Html.ActionLink("Create","Create")

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Modified At</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movieGender in Model)
        {
            <tr>
                <td>@movieGender.Name</td>
                <td>@movieGender.Description</td>
                <td>@movieGender.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@movieGender.ModifiedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @Html.ActionLink("Edit","Edit", new {id= @movieGender.Id}) &nbsp
                    @Html.ActionLink("Delete","Delete", new {id=@movieGender.Id})
                </td>

            </tr>
        }
    </tbody>
</table>
